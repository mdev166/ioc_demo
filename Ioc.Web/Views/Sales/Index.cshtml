@model  IoC.Web.Models.SalesViewModel
@{
    ViewBag.Title = "Sales";
}

<h3>Sales for @Model.SalesPerson.FirstName @Model.SalesPerson.LastName</h3>

<div class="container-fluid"> 
    <div class="row">
        <div class="col-sm-2">@Html.Label("Number")</div>
        <div class="col-sm-2">@Html.Label("Sale Date")</div>
        <div class="col-sm-2">@Html.Label("Amount")</div>
    </div>
    @if (Model.Sales.Count > 0)
    {
        for (int i = 0; i < Model.Sales.Count; i++)
        {
            var sale = Model.Sales[i];
            <div class="row">
                <div class="col-sm-2">@sale.Id.ToString()</div>
                <div class="col-sm-2">@sale.Date.ToShortDateString()</div>
                <div class="col-sm-2">@sale.FormattedAmount</div>
            </div>
        }
    } else
    {
        <div>No sales yet.</div>
    }
</div>




